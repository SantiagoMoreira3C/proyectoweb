        <div class="card text-dark border-dark ">  
            <div class="card-header  fs-3 bg-info"><i class='bx bx-user-plus bx-md'></i> EDITAR COMPRA </div>
            <div class="card-body">
                <form action="/productoeditar" method="POST">
                  <div class="mb-3"  >
                    <label for="user" class="form-label">Referencia compra</label>
                    <input type="text" class="form-control" id="comprareferencia" name="comprareferencia" value="<%=compranombre.comprareferencia %>" tabindex="1" readonly="" >
                    </div>   
                    <div class="mb-3"  >
                      <label for="user" class="form-label">Nombre del comprador</label>
                      <input type="text" class="form-control" id="compranombre" name="compranombre" value="<%=compranombre.compranombre %>" tabindex="1">
                      </div>     
                      <div class="mb-3">
                        <label for="user" class="form-label">Proveedor</label>
                        <select id="compraproveedor" name="compraproveedor" class="form-select" tabindex="2">
                            <option <%= compranombre.compraproveedor=='Proveedor1' ? "select": "" %>  value="Proveedor1">Proveedor1</option>
                            <option <%=  compranombre.compraproveedor=='Proveedor2' ? "select": "" %>  value="Proveedor2">Proveedor2</option>
                            <option <%= compranombre.compraproveedor=='Proveedor3' ? "select": "" %>  value="Proveedor3">Proveedor3</option>
                        </select>
                        </div>    
                        <div class="mb-3">
                            <label for="user" class="form-label">Producto</label>
                            <select id="compraproducto" name="compraproducto" class="form-select" tabindex="2">
                                <option <%= compranombre.compraproducto=='Producto1' ? "select": "" %>  value="Producto1">Producto1</option>
                                <option <%=  compranombre.compraproducto=='Producto2' ? "select": "" %>  value="Producto2">Proveedor2</option>
                                <option <%= compranombre.compraproudcto=='Producto3' ? "select": "" %>  value="Producto3">Proveedor3</option>
                            </select>
                            </div>              
                    <div class="mb-3"  >
                        <label for="user" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="compracantidad" name="compracantidad" value="<%=compranombre.compracantidad %>" tabindex="1">
                        </div>    
                    <button    type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/compralista" class="btn btn-secondary">Cancelar</a>
                    
                </form>
             

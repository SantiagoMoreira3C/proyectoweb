    <% if (proveedornombre) { %>
    <div></div>
    <div class="container mt-4">     
        <div class="card text-dark border-dark ">  
            <div class="card-header  fs-3 bg-info"><i class='bx bx-user-plus bx-md'></i> EDITAR PROVEEDOR </div>
            <div class="card-body">
                <form action="/proveedoreditar" method="POST">
                  <div class="mb-3"  >
                    <label for="user" class="form-label">Referencia proveedor</label>
                    <input type="text" class="form-control" id="proveedorreferencia" name="proveedorreferencia" value="<%=proveedornombre.proveedorreferencia %>" tabindex="1" readonly="" >
                    </div>   
                    <div class="mb-3"  >
                      <label for="user" class="form-label">Nombre</label>
                      <input type="text" class="form-control" id="proveedornombre" name="proveedornombre" value="<%=proveedornombre.proveedornombre %>" tabindex="1">
                      </div>     
                    <div class="mb-3"  >
                    <label for="user" class="form-label">RUC</label>
                    <input type="text" class="form-control" id="proveedorruc" name="proveedorruc" value="<%=proveedornombre.proveedorruc %>" tabindex="1">
                    </div>   
                    <div class="mb-3">
                      <label for="user" class="form-label">Provincia</label>
                      <select id="proveedorprovincia" name="proveedorprovincia" class="form-select" tabindex="2">
                          <option <%= proveedornombre.proveedorpronvicia=='Manabí' ? "select": "" %>  value="Manabi">Manabí</option>
                          <option <%= proveedornombre.proveedorpronvicia=='Esmeralda' ? "selected": '' %>  value="Esmeralda">Esmeralda</option>   
                          <option <%= proveedornombre.proveedorpronvicia=='Guayas' ? "selected": '' %>  value="Guayas">Guayas</option>
                      </select>
                      </div>
                      <div class="mb-3"  >
                        <label for="user" class="form-label">Ciudad</label>
                        <input type="text" class="form-control" id="proveedorciudad" name="proveedorciudad" value="<%=proveedornombre.proveedorciudad %>" tabindex="1">
                        </div>    
                        <div class="mb-3"  >
                          <label for="user" class="form-label">Dirección</label>
                          <input type="text" class="form-control" id="proveedordireccion" name="proveedordireccion" value="<%=proveedornombre.proveedordireccion %>" tabindex="1">
                          </div>
                          <div class="mb-3"  >
                            <label for="user" class="form-label">Teléfono</label>
                            <input type="text" class="form-control" id="proveedortelefono" name="proveedortelefono" value="<%=proveedornombre.proveedortelefono %>" tabindex="1">
                            </div>   
                            <div class="mb-3"  >
                              <label for="user" class="form-label">Correo</label>
                              <input type="text" class="form-control" id="proveedorcorreo" name="proveedorcorreo" value="<%=proveedornombre.proveedorcorreo %>" tabindex="1">
                              </div>  
                              <div class="mb-3"  >
                                <label for="user" class="form-label">Sitio Web</label>
                                <input type="text" class="form-control" id="proveedorweb" name="proveedorweb" value="<%=proveedornombre.proveedorweb %>" tabindex="1">
                                </div>                                                
                    <button    type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/proveedorlista" class="btn btn-secondary">Cancelar</a>
                    
                </form>
             
            </div>
        </div>    
  </div>
  <% } %>

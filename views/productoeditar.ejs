    <% if (productonombre) { %>
    <div></div>
    <div class="container mt-4">     
        <div class="card text-dark border-dark ">  
            <div class="card-header  fs-3 bg-info"><i class='bx bx-user-plus bx-md'></i> EDITAR PRODUCTO </div>
            <div class="card-body">
                <form action="/productoeditar" method="POST">
                  <div class="mb-3"  >
                    <label for="user" class="form-label">Referencia producto</label>
                    <input type="text" class="form-control" id="productoreferencia" name="productoreferencia" value="<%=productonombre.productoreferencia %>" tabindex="1" readonly="" >
                    </div>   
                    <div class="mb-3"  >
                      <label for="user" class="form-label">Nombre producto</label>
                      <input type="text" class="form-control" id="productonombre" name="productonombre" value="<%=productonombre.productonombre %>" tabindex="1">
                      </div>     
                    <div class="mb-3"  >
                    <label for="user" class="form-label">Cantidad</label>
                    <input type="number" class="form-control" id="productocantidad" name="productocantidad" value="<%=productonombre.productocantidad %>" tabindex="1">
                    </div>   
                    <div class="mb-3"  >
                        <label for="user" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="productodescripcion" name="productodescripcion" value="<%=productonombre.productodescripcion %>" tabindex="1">
                        </div>   
                    <div class="mb-3">
                      <label for="user" class="form-label">Marca</label>
                      <select id="productomarca" name="productomarca" class="form-select" tabindex="2">
                          <option <%= productonombre.productomarca=='Marca1' ? "select": "" %>  value="Marca1">Marca1</option>
                          <option <%= productonombre.productomarca=='Marca2' ? "select": "" %>  value="Marca2">Marca2</option>
                          <option <%= productonombre.productomarca=='Marca3' ? "select": "" %>  value="Marca3">Marca3</option>
                      </select>
                      </div>                                      
                    <button    type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/productolista" class="btn btn-secondary">Cancelar</a>
                    
                </form>
             
            </div>
        </div>    
  </div>
  <% } %>
